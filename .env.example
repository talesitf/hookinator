# Configurações do Hookinator
# Copie para .env e ajuste os valores

# Token de autenticação (OBRIGATÓRIO)
HOOKINATOR_TOKEN=seu-token-secreto-super-seguro

# Configurações de transação
HOOKINATOR_EXPECTED_AMOUNT=49.90
HOOKINATOR_EXPECTED_CURRENCY=BRL

# Configurações do servidor
HOOKINATOR_PORT=3000
HOOKINATOR_LOG_LEVEL=info

# Banco de dados
HOOKINATOR_DB_PATH=webhook_transactions.db

# URLs de notificação
HOOKINATOR_CONFIRM_URL=http://localhost:8000/confirmar
HOOKINATOR_CANCEL_URL=http://localhost:8000/cancelar

# Configurações de validação
HOOKINATOR_MAX_PAYLOAD_SIZE=1048576
HOOKINATOR_MIN_TRANSACTION_ID_LENGTH=5